<div class="meta-bar">
  <div class="home-link">
    {{#link-to "dashboard"}}
      <img src="img/icon-home.jpg" />
      <span>Home</span>
    {{/link-to}}
  </div>
  <div class="logo">
      <img src="img/telegram-logo-meta-bar.jpg" />
  </div>
  <div class="user-meta">
    {{#if user}}
      {{#link-to "profile" user.id}}
          <div class="placeholder-image"></div>
          <span>{{user.name}}</span>
      {{/link-to}}
    {{else}}
      {{#link-to "auth.login"}}
          <span>Login</span>
      {{/link-to}}
    {{/if}}

  </div>
</div>