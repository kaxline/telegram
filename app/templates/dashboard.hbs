<div class="post-input">
  {{input type=text}}
    <div class="footer">
        <span>140 Characters</span>
        <button type="button">Publish</button>
    </div>
</div>

<div class="latest-posts-header">
    <h2>Latest Posts</h2>
</div>

<div class="latest-posts-container">
    {{controller.session.user.name}}
  {{#each post in model.posts}}
    {{post-list-item}}
  {{/each}}
</div>

